{
    "badges":[
       {
          "type":"origins:tooltip",
          "sprite":"origins:textures/gui/badge/toggle.png",
          "text":{
             "translate":"badge.quirks.blazing_hair.rising_dawn_toggle",
             "with":[
                {
                   "keybind":"key.origins.quaternary_active"
                }
             ]
          }
       },
       {
          "type":"origins:tooltip",
          "sprite":"origins:textures/gui/badge/info.png",
          "text":{
             "translate":"badge.quirks.blazing_hair.rising_dawn",
             "with":[
                {
                   "keybind":"key.jump"
                }
             ]
          }
       }
    ],
    "type":"origins:multiple",
    "timer":{
       "type":"origins:resource",
       "min":0,
       "max":16,
       "hud_render":{
          "should_render":false
       },
       "start_value":0
    },
    "toggle":{
       "type":"origins:resource",
       "min":0,
       "max":1,
       "hud_render":{
          "should_render":false
       },
       "start_value":0
    },
    "flip":{
       "type":"origins:active_self",
       "entity_action":{
          "type":"origins:if_else",
          "condition":{
             "type":"origins:resource",
             "resource":"powert:mha/blazing_hair/rising_dawn_toggle",
             "comparison":"==",
             "compare_to":1
          },
          "if_action":{
             "type":"origins:and",
             "actions":[
                {
                   "type":"origins:modify_resource",
                   "modifier":{
                      "operation":"set_total",
                      "value":0.00
                   },
                   "resource":"powert:mha/blazing_hair/rising_dawn_toggle"
                },
                {
                   "type":"origins:execute_command",
                   "command":"title @s actionbar {\"text\":\"ʀɪꜱɪɴɢ ᴅᴀᴡɴ ᴅᴇᴀᴄᴛɪᴠᴀᴛᴇᴅ\",\"color\":\"#B2F280\",\"bold\":true}"
                },
                {
                   "type":"origins:clear_effect",
                   "effect":"minecraft:levitation"
                },
                {
                   "type":"origins:modify_resource",
                   "modifier":{
                      "operation":"set_total",
                      "value":0.00
                   },
                   "resource":"powert:mha/blazing_hair/rising_dawn_timer"
                },
                {
                   "type":"origins:set_fall_distance",
                   "fall_distance":0
                }
             ]
          },
          "else_action":{
             "type":"origins:and",
             "actions":[
                {
                   "type":"origins:modify_resource",
                   "modifier":{
                      "operation":"set_total",
                      "value":1.00
                   },
                   "resource":"powert:mha/blazing_hair/rising_dawn_toggle"
                },
                {
                   "type":"origins:execute_command",
                   "command":"title @s actionbar {\"text\":\"ʀɪꜱɪɴɢ ᴅᴀᴡɴ ᴀᴄᴛɪᴠᴀᴛᴇᴅ\",\"color\":\"#B2F280\",\"bold\":true}"
                }
             ]
          }
       },
       "cooldown":5,
       "hud_render":{
          "should_render":false
       },
       "key":{
          "key":"key.origins.quaternary_active",
          "continuous":false
       },
       "condition": {
         "type": "origins:resource",
         "resource": "powert:mha/universal/quirk_erased",
         "comparison": "==",
         "compare_to": 0
      }
    },
    "activate":{
       "type":"origins:active_self",
       "entity_action":{
          "type":"origins:and",
          "actions":[
             {
                "type":"origins:apply_effect",
                "effect":{
                   "effect":"minecraft:levitation",
                   "amplifier":6,
                   "duration":14,
                   "is_ambient":true,
                   "show_icon":false,
                   "show_particles":false
                }
             },
             {
                "type":"origins:modify_resource",
                "modifier":{
                   "operation":"set_total",
                   "value":16.00
                },
                "resource":"powert:mha/blazing_hair/rising_dawn_timer"
             },
             {
                "type":"origins:delay",
                "action":{
                   "type":"origins:set_fall_distance",
                   "fall_distance":0
                },
                "ticks":16
             }
          ]
       },
       "cooldown":14,
       "hud_render":{
          "should_render":true,
          "sprite_location":"selenivee:textures/gui/community/selenivee/resource_bar_01.png",
          "bar_index":4,
          "order":2
       },
       "key":{
          "key":"key.jump",
          "continuous":true
       },
       "condition":{
          "type":"origins:and",
          "conditions":[
             {
                "type":"origins:resource",
                "resource":"powert:mha/blazing_hair/rising_dawn_toggle",
                "comparison":"==",
                "compare_to":1
             },
             {
                "type":"origins:on_block",
                "inverted":true
             },
             {
                "type":"origins:creative_flying",
                "inverted":true
             },
             {
                "type":"origins:fall_flying",
                "inverted":true
             },
             {
               "type": "origins:resource",
               "resource": "powert:mha/universal/quirk_erased",
               "comparison": "==",
               "compare_to": 0
             }
          ]
       }
    },
    "tick_down":{
       "type":"origins:action_over_time",
       "entity_action":{
          "type":"origins:and",
          "actions":[
             {
                "type":"origins:change_resource",
                "resource":"powert:mha/blazing_hair/rising_dawn_timer",
                "change":-2,
                "operation":"add"
             },
             {
                "type":"origins:play_sound",
                "sound":"minecraft:block.fire.extinguish",
                "volume":0.30,
                "pitch":1.60
             },
             {
                "type":"origins:execute_command",
                "command":"execute at @s anchored feet rotated ~ 0 run function powert:mha/blazing_hair/rising_dawn_particles"
             }
          ]
       },
       "falling_action": {
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:modify_resource",
               "modifier":{
                  "operation":"set_total",
                  "value":0.00
               },
               "resource":"powert:mha/blazing_hair/rising_dawn_toggle"
            },
            {
               "type":"origins:execute_command",
               "command":"title @s actionbar {\"text\":\"ʀɪꜱɪɴɢ ᴅᴀᴡɴ ᴅᴇᴀᴄᴛɪᴠᴀᴛᴇᴅ\",\"color\":\"#B2F280\",\"bold\":true}"
            },
            {
               "type":"origins:clear_effect",
               "effect":"minecraft:levitation"
            },
            {
               "type":"origins:modify_resource",
               "modifier":{
                  "operation":"set_total",
                  "value":0.00
               },
               "resource":"powert:mha/blazing_hair/rising_dawn_timer"
            },
            {
               "type":"origins:set_fall_distance",
               "fall_distance":0
            }
         ]
       },
       "interval":2,
       "condition":{
         "type": "origins:and",
         "conditions": [
            {
               "type":"origins:resource",
               "resource":"powert:mha/blazing_hair/rising_dawn_timer",
               "comparison":">=",
               "compare_to":1
            },
            {
              "type": "origins:resource",
              "resource": "powert:mha/universal/quirk_erased",
              "comparison": "==",
              "compare_to": 0
            }
         ]
       }
    },
    "fire_damage":{
       "type":"origins:modify_damage_taken",
       "damage_condition":{
          "type":"origins:in_tag",
          "tag":"is_fire"
       },
       "modifier":{
          "name":"Fire Damage Reduction",
          "operation":"multiply_total_multiplicative",
          "value":-0.45
       }
    }
}