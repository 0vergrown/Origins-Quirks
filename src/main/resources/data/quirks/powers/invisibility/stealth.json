{
    "name": "Spectral Signature",
    "description": "Toggle your invisibility, draining stamina. Entities within a short distance will recieve a glowing outline of you. IF they can see you, they will recieve an outline for you.",
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/toggle.png",
            "text": "Primary %s"
        }
    ],
    "type": "origins:multiple",
    "cooldown": {
        "type": "origins:cooldown",
        "cooldown": 180,
        "hud_render": {
            "should_render": true,
            "sprite_location": "powert:textures/gui/sprites/invisibility/resource_bar_01.png",
            "bar_index": 3
        }
    },
    "toggle": {
        "type": "origins:toggle",
        "active_by_default": true,
        "key": {
            "key": "key.quirks.primary",
            "continuous": false
        },
        "retain_state": false,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "quirks:invisibility/stealth_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "quirks:universal/quirk_erased",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        }
    },
    "swapsound": {
        "type": "origins:action_over_time",
        "condition": {
            "type": "origins:power_active",
            "power": "quirks:invisibility/stealth_toggle"
        },
        "interval": 1,
        "rising_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "stopsound @s player quirks:invisibility.cloak"
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound quirks:invisibility.cloak player @a[distance=..1] ~ ~ ~ 1 1"
                }
            ]
        },
        "falling_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "quirks:invisibility/stealth_cooldown",
                "compare_to": 0,
                "comparison": "=="
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "stopsound @s player quirks:invisibility.cloak"
                    },
                    {
                        "type": "origins:execute_command",
                        "command": "playsound quirks:invisibility.cloak player @a[distance=..1] ~ ~ ~ 1 1"
                    }
                
                ]
            },
            "else_action": {
                "type": "origins:nothing"
            }
        }
    },
    "invisibility": {
        "type": "origins:invisibility",
        "render_armor": false,
        "render_outline": false,
        "bientity_condition": {
            "type": "origins:distance",
            "compare_to": 4,
            "comparison": "<="
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:power_active",
                    "power": "quirks:invisibility/stealth_toggle"
                },
                {
                    "type": "origins:resource",
                    "resource": "quirks:invisibility/stealth_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        }
    },
    "self_glow": {
        "type": "origins:self_glow",
        "bientity_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:can_see",
                    "shape_type": "collider",
                    "fluid_handling": "none"
                },
                {
                    "type": "origins:distance",
                    "comparison": "<=",
                    "compare_to": 4
                }
            ]
        },
        "use_teams": false,
        "red": 0.808,
        "green": 0.753,
        "blue": 0.898,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:power_active",
                    "power": "quirks:invisibility/stealth_toggle"
                },
                {
                    "type": "origins:resource",
                    "resource": "quirks:invisibility/stealth_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        }
    },
    "entity_glow": {
        "type": "origins:entity_glow",
        "bientity_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:can_see",
                    "shape_type": "collider",
                    "fluid_handling": "none"
                },
                {
                    "type": "origins:distance",
                    "comparison": "<=",
                    "compare_to": 4
                }
            ]
        },
        "use_teams": false,
        "red": 0.808,
        "green": 0.753,
        "blue": 0.898,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:power_active",
                    "power": "quirks:invisibility/stealth_toggle"
                },
                {
                    "type": "origins:resource",
                    "resource": "quirks:invisibility/stealth_cooldown",
                    "comparison": ">=",
                    "compare_to": 1,
                    "inverted": true
                }
            ]
        }
    },
    "overlay": {
        "type": "origins:overlay",
        "texture": "minecraft:textures/misc/vignette.png",
        "strength": 1.00,
        "red": 0.808,
        "green": 0.753,
        "blue": 0.898,
        "draw_mode": "nausea",
        "draw_phase": "below_hud",
        "hide_with_hud": false,
        "visible_in_third_person": true,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:power_active",
                    "power": "quirks:invisibility/stealth_toggle"
                },
                {
                    "type": "origins:resource",
                    "resource": "quirks:invisibility/stealth_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        }
    },
    "lockout":{
        "type": "origins:self_action_when_hit",
        "entity_action": {
            "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:trigger_cooldown",
                        "power": "quirks:invisibility/stealth_cooldown"
                    },
                    {
                        "type": "origins:toggle",
                        "power": "quirks:invisibility/stealth_resource"
                    },
                    {
                        "type": "origins:execute_command",
                        "command": "playsound quirks:invisibility.combat player @a[distance=..7] ~ ~ ~ 1 2"
                    }
                ]
        },
        "cooldown": 5,
        "hud_render": {
            "should_render": false
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:power_active",
                    "power": "quirks:invisibility/stealth_toggle"
                },
                {
                    "type": "origins:resource",
                    "resource": "quirks:invisibility/stealth_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        }
    },
    "disable_events": {
        "type": "origins:prevent_game_event",
        "events": [
            "minecraft:swim",
            "minecraft:step",
            "minecraft:flap",
            "minecraft:elytra_glide",
            "minecraft:hit_ground",
            "minecraft:splash",
            "minecraft:eat",
            "minecraft:entity_damage"
        ],
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:power_active",
                    "power": "quirks:invisibility/stealth_toggle"
                },
                {
                    "type": "origins:resource",
                    "resource": "quirks:invisibility/stealth_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        }
    },
    "label": {
        "type": "apugli:prevent_label_render",
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:power_active",
                    "power": "quirks:invisibility/stealth_toggle"
                },
                {
                    "type": "origins:resource",
                    "resource": "quirks:invisibility/stealth_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        }
    }
}
