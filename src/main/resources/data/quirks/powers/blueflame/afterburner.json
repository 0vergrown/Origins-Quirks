{
   "badges":[
      {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/toggle.png",
         "text":{
            "translate":"badge.quirks.blueflame.afterburner_toggle",
            "with":[
               {
                  "keybind":"key.origins.primary_active"
               }
            ]
         }
      },
      {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/active.png",
         "text":{
            "translate":"badge.quirks.blueflame.afterburner_propel_forward",
            "with":[
               {
                  "keybind":"key.jump"
               }
            ]
         }
      }
   ],
   "type":"origins:multiple",
   "toggle":{
      "type":"origins:toggle",
      "active_by_default":false,
      "key":{
         "key":"key.origins.primary_active",
         "continuous":false
      },
      "retain_state":false,
      "condition": {
         "type":"origins:resource",
         "resource":"quirks:universal/quirk_erased",
         "comparison":"==",
         "compare_to":0
      }
   },
   "particle_still": {
		"type": "origins:action_over_time",
		"entity_action": {
			"type": "origins:execute_command",
			"command": "particle quirks:blueflame ~ ~-0.5 ~ 0.3 0.3 0.3 0.01 20 normal @a"
		},
      "interval": 5,
		"condition": {
			"type": "origins:and",
			"conditions": [
            {
               "type":"origins:power_active",
               "power":"quirks:blueflame/afterburner_toggle",
               "inverted":false
            },
				{
					"type": "origins:fall_flying",
					"inverted": true
				},
				{
					"type": "origins:on_block",
					"inverted": true
				},
				{
					"type": "origins:gamemode",
					"gamemode": "spectator",
					"inverted": true
				}
			]
		}
	},
   "climb_up":{
      "type":"origins:climbing",
      "allow_holding":false,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:power_active",
               "power":"quirks:blueflame/afterburner_toggle",
               "inverted":false
            },
            {
               "type":"origins:sprinting",
               "inverted":true
            },
            {
               "type":"origins:sneaking",
               "inverted":true
            }
         ]
      }
   },
   "hover":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:apply_effect",
         "effect":{
            "effect":"minecraft:levitation",
            "duration":10,
            "amplifier":-1,
            "is_ambient":true,
            "show_particles":false,
            "show_icon":false
         }
      },
      "falling_action":{
         "type":"origins:clear_effect",
         "effect":"minecraft:levitation"
      },
      "interval":5,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:power_active",
               "power":"quirks:blueflame/afterburner_toggle",
               "inverted":false
            },
            {
               "type":"origins:sprinting",
               "inverted":true
            },
            {
               "type":"origins:sneaking",
               "inverted":true
            },
            {
               "type":"origins:on_block",
               "inverted":true
            }
         ]
      }
   },
   "hover_down":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:apply_effect",
         "effect":{
            "effect":"minecraft:slow_falling",
            "duration":10,
            "amplifier":0,
            "is_ambient":true,
            "show_particles":false,
            "show_icon":false
         }
      },
      "falling_action":{
         "type":"origins:clear_effect",
         "effect":"minecraft:slow_falling"
      },
      "interval":5,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:power_active",
               "power":"quirks:blueflame/afterburner_toggle",
               "inverted":false
            },
            {
               "type":"origins:or",
               "conditions":[
                  {
                     "type":"origins:sprinting"
                  },
                  {
                     "type":"origins:sneaking"
                  }
               ]
            },
            {
               "type":"origins:on_block",
               "inverted":true
            }
         ]
      }
   },
   "velocity_boost":{
      "type":"origins:active_self",
      "entity_action":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:if_else",
               "condition":{
                  "type":"origins:resource",
                  "resource":"quirks:blueflame/awakening_resource",
                  "comparison":"==",
                  "compare_to":0
               },
               "if_action":{
                  "type":"origins:modify_resource",
                  "modifier":{
                     "operation":"add_base_early",
                     "value":1.00
                  },
                  "resource":"quirks:blueflame/heat_gauge_temperature"
               },
               "else_action":{
                  "type":"origins:modify_resource",
                  "modifier":{
                     "operation":"add_base_early",
                     "value":2.00
                  },
                  "resource":"quirks:blueflame/heat_gauge_temperature"
               }
            },
            {
               "type":"origins:add_velocity",
               "x":0.00,
               "y":0.30,
               "z":0.70,
               "space":"local",
               "set":false
            },
            {
               "type":"origins:execute_command",
               "command":"particle quirks:blueflame ~ ~0.5 ~-0.7 0.5 0.6 0.5 0.01 20 force @a"
            },
            {
               "type":"origins:play_sound",
               "sound":"minecraft:item.firecharge.use",
               "volume":1.00,
               "pitch":0.50
            }
         ]
      },
      "cooldown":3,
      "hud_render":{
         "should_render":false
      },
      "key":{
         "key":"key.jump",
         "continuous":true
      },
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:power_active",
               "power":"quirks:blueflame/afterburner_toggle",
               "inverted":false
            },
            {
               "type":"origins:moving"
            },
            {
               "type":"origins:sneaking",
               "inverted":true
            }
         ]
      }
   }
}