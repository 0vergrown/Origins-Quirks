{
   "type":"origins:multiple",
   "resource":{
      "type":"origins:resource",
      "min":0,
      "max":1,
      "hud_render":{
         "should_render":false
      },
      "start_value":0
   },
   "set":{
      "type":"origins:entity_set"
   },
   "toggle":{
      "type":"origins:active_self",
      "entity_action":{
         "type":"origins:if_else",
         "condition":{
            "type":"origins:resource",
            "resource":"quirks:sloshed/hide_in_plain_sight_resource",
            "comparison":"==",
            "compare_to":0
         },
         "if_action":{
            "type":"origins:change_resource",
            "resource":"quirks:sloshed/hide_in_plain_sight_resource",
            "change":1,
            "operation":"set"
         },
         "else_action":{
            "type":"origins:and",
            "actions":[
               {
                  "type":"origins:change_resource",
                  "resource":"quirks:sloshed/hide_in_plain_sight_resource",
                  "change":0,
                  "operation":"set"
               },
               {
                  "type":"origins:action_on_set",
                  "set":"quirks:sloshed/hide_in_plain_sight_set",
                  "bientity_action":{
                     "type":"origins:remove_from_set",
                     "set":"example:entities_to_exclude"
                  },
                  "limit":0,
                  "reverse":false
               }
            ]
         }
      },
      "cooldown":1,
      "hud_render":{
         "should_render":false
      },
      "key":{
         "key":"key.origins.primary_active",
         "continuous":false
      },
      "condition":{
         "type":"origins:all_of",
         "conditions":[
            {
               "type":"origins:resource",
               "resource":"quirks:sloshed/move_selector_resource",
               "comparison":"==",
               "compare_to":2
            },
            {
               "type":"origins:resource",
               "resource":"quirks:sloshed/sloshed_aura_resource",
               "comparison":"==",
               "compare_to":1
            }
         ]
      }
   },
   "add_to_set":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:area_of_effect",
         "radius":10.00,
         "shape":"cube",
         "bientity_action":{
            "type":"origins:add_to_entity_set",
            "set":"quirks:sloshed/hide_in_plain_sight_set"
         },
         "bientity_condition":{
            "type":"origins:in_entity_set",
            "set":"quirks:sloshed/hide_in_plain_sight_set",
            "inverted":true
         },
         "include_actor":false
      },
      "interval":1,
      "condition":{
         "type":"origins:all_of",
         "conditions":[
            {
               "type":"origins:resource",
               "resource":"quirks:sloshed/hide_in_plain_sight_resource",
               "comparison":"==",
               "compare_to":1
            },
            {
               "type":"origins:resource",
               "resource":"quirks:sloshed/sloshed_aura_resource",
               "comparison":"==",
               "compare_to":1
            }
         ]
      }
   },
   "invisibility":{
      "type":"origins:invisibility",
      "render_armor":false,
      "render_outline":false,
      "bientity_condition":{
         "type":"origins:in_set",
         "set":"quirks:sloshed/hide_in_plain_sight_set"
      },
      "condition":{
         "type":"origins:all_of",
         "conditions":[
            {
               "type":"origins:resource",
               "resource":"quirks:sloshed/hide_in_plain_sight_resource",
               "comparison":"==",
               "compare_to":1
            },
            {
               "type":"origins:resource",
               "resource":"quirks:sloshed/sloshed_aura_resource",
               "comparison":"==",
               "compare_to":1
            }
         ]
      }
   }
}